<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="JetJot.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        <!-- Remove Fluent focus ring for dialog text boxes; outer border handles focus color. -->
        <Style Selector="TextBox.dialog-textbox /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BoxShadow" Value="0 0 0 0 Transparent"/>
        </Style>
        <Style Selector="TextBox.dialog-textbox:focus /template/ Border#PART_BorderElement">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BoxShadow" Value="0 0 0 0 Transparent"/>
        </Style>
    </Application.Styles>
</Application>
